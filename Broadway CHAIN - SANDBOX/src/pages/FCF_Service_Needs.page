<apex:page showHeader="false" standardStylesheets="true" sidebar="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0" controller="FirstContact" extensions="StreetContactMapUtility" action="{!useSelectedContact}">    

    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">    
  
        <head>
            <apex:stylesheet value="{!URLFOR($Resource.SLDS0121, 'assets/styles/salesforce-lightning-design-system-vf.css')}" /> 
            <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" /> 
        </head>    

        <style>
            .req:before {content: "";
                            color: red;
                            font-size: 1.6em;
                            font-weight: bold }
        
            input[type="text"] {
                min-width: 120px;
            
            }
                    
        </style>        
    
        
        <body>
            <div class="slds">
            <apex:form >
            
                <div class="slds-page-header" role="banner">                            
                    <h1 class="slds-text-heading--small slds-m-bottom--small slds-align-middle">
                        Service Needs and Lifestyle - Entry
                        <br/>
                        <center><strong>{!selectedClientName}</strong></center>
                    </h1>

                    <div class="slds-grid ">
                        <div class="slds-col slds-has-flexi-truncate slds-size--1-of-2 slds-col--padded-small">
                            <apex:commandButton value="Cancel" action="{!cancel}" immediate="true" styleClass="slds-button slds-button--brand slds-button--small" html-formnovalidate="formnovalidate" />  
                        </div>
                        <div class="slds-col  slds-has-flexi-truncate slds-size--1-of-2  slds-col--padded-small">
                            <apex:commandButton action="{!saveSupportNeedsandExit}" value="Save and Exit" styleClass="slds-button slds-button--brand slds-button--small   slds-float--right" />
                        </div>
                     </div>
                </div>
                
                <b><h1>Enter Service Needs and Lifestyle Details</h1></b><br/>
                <apex:pageMessages escape="false" />
                <form class="slds-form--inline">
                    <!--
                    <apex:repeat var="f" value="{!$ObjectType.Support_Needs_Lifestyle__c.FieldSets.MobileSupportNeedsEntry}">
                        <div class="slds-form-element slds-col--padded-small">
                            <label class="slds-form-element__label" >{!f.label}</label>
                            <div class="slds-form-element__control">
                       
                                <apex:inputField value="{!sna[f.fieldPath]}"   styleclass="slds-input--small " rendered="{!f.type = 'boolean'}"/>
                                <apex:inputField value="{!sna[f.fieldPath]}"   styleclass="slds-input--small slds-size--1-of-1" rendered="{!NOT(f.type = 'boolean')}"/>
                            </div>
                        </div>                      
                
                
                    </apex:repeat> 
                    -->

                    <div class="slds-grid slds-wrap">
                        <apex:repeat value="{!serviceNeedFields}" var="key">

                                    <div class="{!serviceNeedFieldFormat[key][0]}">
                                        <span class="slds-form-element__label  {!serviceNeedFieldFormat[key][0]}">{!serviceNeedFields[key][0].label}</span>
                                        <div class="slds-form-element__control "  >
                                                                                       
                                            <apex:inputField value="{!sna[serviceNeedFields[key][0].fieldPath]}"   styleclass="slds-input--small " />



                                        </div>

                                     </div>

                                                                      
                                 <!-- <apex:outputPanel rendered="{!serviceNeedFields[key][0].fieldPath != serviceNeedFields[key][1].fieldPath}"> -->
                                     <div class="{!serviceNeedFieldFormat[key][1]}">
    
                                        <span class="slds-form-element__label {!serviceNeedFieldFormat[key][1]}">{!serviceNeedFields[key][1].label}</span>
                                        <div class="slds-form-element__control">
                                        <apex:inputField value="{!sna[serviceNeedFields[key][1].fieldPath]}"   styleclass="slds-input--small "  />
                                        </div>
                                    </div>
                                <!-- </apex:outputPanel> -->
                            
                        </apex:repeat>                    
                    </div>                     
                    
                    <div class="slds-page-header" role="banner">
                        <div class="slds-grid ">
                            <div class="slds-col slds-has-flexi-truncate slds-size--1-of-2 slds-col--padded-small">
                                <apex:commandButton value="Cancel" action="{!cancel}" immediate="true" styleClass="slds-button slds-button--brand slds-button--small" html-formnovalidate="formnovalidate" />  
                            </div>
                            <div class="slds-col  slds-has-flexi-truncate slds-size--1-of-2  slds-col--padded-small">
                                <apex:commandButton action="{!saveSupportNeedsandExit}" value="Save and Exit" styleClass="slds-button slds-button--brand slds-button--small   slds-float--right" />
                            </div>
                         </div>
                     </div>                                                                                                                                    
                </form>
                
                </apex:form>
            </div>
        </body>

    </html>
            
</apex:page>